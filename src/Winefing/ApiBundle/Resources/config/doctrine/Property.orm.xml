<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Winefing\ApiBundle\Repository\PropertyRepository" name="Winefing\ApiBundle\Entity\Property">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" column="name" length="255"/>
    <field name="description" type="string" column="description" length="1000" nullable="true"/>
    <many-to-one field="user" target-entity="User">
      <join-column name="user_id" referenced-column-name="id" />
    </many-to-one>
    <field name="address" type="string" column="address" length="255"/>
    <field name="street" type="string" column="street" length="150"/>
    <field name="postalCode" type="string" column="postal_code" length="10"/>
    <field name="locality" type="string" column="locality" length="50"/>
    <field name="country" type="string" column="country" length="50"/>
    <field name="lng" type="float" column="lng"/>
    <field name="lat" type="float" column="lat"/>
  </entity>
</doctrine-mapping>
