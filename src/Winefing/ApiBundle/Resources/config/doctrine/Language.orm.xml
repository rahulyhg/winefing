<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:gedmo="http://Atlantic18.github.io/DoctrineExtensions/schemas/orm/doctrine-extensions-3.0.xsd">
  <entity repository-class="Winefing\ApiBundle\Repository\LanguageRepository" name="Winefing\ApiBundle\Entity\Language">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="code" type="string" column="code" length="50" unique="true"/>
    <field name="name" type="string" column="name" length="50"/>
    <field name="picture" type="string" column="picture" nullable="true" length="1000"/>
  </entity>
</doctrine-mapping>
