                </fieldset>
                <input type="submit" class="btn btn-primary pull-right" value="{% trans %}label.submit{% endtrans %}">
            {{ form_end(eventRequestForm) }}
        </div>
        <div class="col-sm-4">
        </div>
    </div>
{% endblock %}
