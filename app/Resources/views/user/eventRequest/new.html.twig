                    <label>{{ form_label(eventRequestForm.duration)}} </label>
                    {{ form_errors(eventRequestForm.duration) }}
                    {{ form_widget(eventRequestForm.duration, {'attr': {'class': 'form-control'}}) }}
                </fieldset>
                <fieldset class="form-group">
