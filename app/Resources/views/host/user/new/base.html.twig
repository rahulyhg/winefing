{% extends 'base.html.twig' %}
{% block body %}
    {% set id = app.request.get('id') %}
        <div class="row">
            <div class="stepwizard col-md-offset-3">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a type="button" class="btn btn-circle {% if route != 'box_select_item_choices' %}{{ 'disabled btn-default' }}{% else %}{{  'btn-primary' }}{% endif %}">1</a>
                        <p>{% trans %}label.contact{% endtrans %}</p>
                    </div>
                    <div class="stepwizard-step">
                        <a type="button" class="btn btn-circle {% if (route == 'box_paiement_address' and app.request.get('addressType') == address_billing)%}{{ 'btn-primary' }}{% else %}{{  'disabled btn-default' }}{% endif %}">2</a>
                        <p>{% trans %}label.domain{% endtrans %}</p>
                    </div>
                </div>
            </div>
            {% block form %}
            {% endblock %}
        </div>
    </div>
{% endblock %}