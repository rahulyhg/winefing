<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="lastName">*{% trans %}label.last_name{% endtrans %} : </label>
            <input type="text" class="form-control" id="user[lastName]" name="user[lastName]" required="required">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="firstName">*{% trans %}label.first_name{% endtrans %} : </label>
            <input type="text" class="form-control" id="user[firstname]" name="user[firstname]" required="required">
        </div>
    </div>
</div>
<div class="form-group" id="phoneNumber">
    <label for="phoneNumber">*{% trans %}label.phone_number{% endtrans %} : </label>
    <input type="text" class="form-control" id="phoneNumber" maxlength="10" name="user[phoneNumber]" required>
</div>
<div class="form-group" id="emailFieldset">
    <label for="email">*{% trans %}label.email{% endtrans %} : </label>
    <input type="email" type="email" class="form-control" id="email" name="user[email]" required>
</div>
<div id="emailRepeatFieldset" class="form-group has-feedback">
    <label for="email">*{% trans %}label.email_confirmation{% endtrans %} : </label>
    <input type="email" type="email" class="form-control" id="emailRepeat" name="user[emailRepeat]" required>
</div>
