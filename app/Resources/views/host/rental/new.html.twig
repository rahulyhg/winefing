{% extends 'host/base.html.twig' %}
{% block table %}
    <div class="container">
        <div class="stepwizard col-md-offset-3">
            <div class="stepwizard-row setup-panel">
                <div class="stepwizard-step">
                    <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                    <p>{% trans %}label.property{% endtrans %}</p>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                    <p>{% trans %}label.pictures{% endtrans %}</p>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                    <p>{% trans %}label.informations{% endtrans %}</p>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
                    <p>{% trans %}label.prices{% endtrans %}</p>
                </div>
            </div>
        </div>
        <form role="form" action="{{ path('host_submit') }}" method="post">
            <div class="row setup-content" id="step-1">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> {% trans %}label.property{% endtrans %} </h3>
                        {{ form_start(rentalForm) }}
                            <div class="form-group">
                                {{ form_widget(rentalForm.id,  { 'attr': {'required': 'false'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="address">{% trans %}label.name{% endtrans %} </label>
                                {{ form_widget(rentalForm.name,  { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <p style="font-style: italic">{% trans %}label.property_name_exemple{% endtrans %}</p>
                            <div class="form-group">
                                <label for="address">{% trans %}label.property{% endtrans %} </label>
                                {{ form_widget(rentalForm.property,  { 'attr': {'class': 'form-control', 'id' :'property'} }) }}
                            </div>
                            <button onclick="test('{{ path('property_new') }}')" class="btn btn-primary nextBtn btn-lg pull-right" type="button" >{% trans %}label.next{% endtrans %}</button>
                        {{ form_end(rentalForm) }}
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-2">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3>{% trans %}label.the_domain{% endtrans %}</h3>
                        {#{{ include('host/domain/form.html.twig') }}#}
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >{% trans %}label.next{% endtrans %}</button>
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-3">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3>{% trans %}label.address{% endtrans %}</h3>
                        {#{{ include('host/address/form.html.twig') }}#}
                        <input type="submit" class="btn btn-success btn-lg pull-right" value="{% trans %}label.submit{% endtrans %}" >
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-4">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3>{% trans %}label.prices{% endtrans %}</h3>
                        {#{{ include('host/address/form.html.twig') }}#}
                        <input type="submit" class="btn btn-success btn-lg pull-right" value="{% trans %}label.submit{% endtrans %}" >
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script>
        function test(url) {
            if($('#property').find(":selected").text().length == 0) {
                $(location).attr('href', url);
            }
        }
    </script>
{% endblock %}
