<div class="modal fade" tabindex="-1" role="dialog" id="articleCategory">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{ form_start(form,  { 'attr': {'required': 'true', 'id' : 'articleCategory'} }) }}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Ajouter/modifier une cat√©gorie d'article</h4>
                </div>
                <div class="modal-body">
                    <fieldset class="form-group" id="id" style="display: none">
                        {{ form_widget(form.id,  { 'attr': {'required': 'false'} }) }}
                    </fieldset>
                    <fieldset class="form-group" id="description">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description,  { 'attr': {'class': 'form-control'} }) }}
                    </fieldset>
                    <fieldset class="form-group" id="categoryPere">
                        {{ form_label(form.categoryPere) }}
                        {{ form_widget(form.categoryPere,  { 'attr': {'class': 'form-control'} }) }}
                    </fieldset>
                    <label>Name</label>
                    {% for articleCategoryTr in form.articleCategoryTrs %}
                        <fieldset class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    {{ form_widget(articleCategoryTr.language,  { 'attr': {'disabled': 'false'} }) }}
                                </div>
                                <div class="col-md-10">
                                    {{ form_widget(articleCategoryTr.name,  { 'attr': {'class': 'form-control', 'style': 'width: 50%;'} }) }}
                                    {{ form_widget(articleCategoryTr.id, {'attr': {'style': 'display: none'}}) }}
                                </div>
                            </div>
                        </fieldset>
                    {% endfor %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary pull-right">Valider</button>
                </div>
            {{ form_end(form) }}
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>