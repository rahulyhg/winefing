{% extends 'admin/base.html.twig' %}
{% block table %}
    <table class="table table-striped table-responsive">
            <thead>
            <tr>
                <th>
                    &nbsp;<a href="{{ path('articleTr_new_form') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus-sign"></span></a>
                    Titre
                </th>
                <th>Autheur</th>
                <th>Supprimer</th>
            </tr>
            </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td data-toggle="collapse" data-target="#article-{{ article.id }}" class="accordion-toggle" style="cursor:pointer">
                        {{ article.description }}
                    </td>
                    <td data-toggle="collapse" data-target="#article-{{ article.id }}" class="accordion-toggle" style="cursor:pointer">
                    {{ article.user.fullName }}
                    </td>
                    <td>
                        {% if article.articleTrs is empty %}
                        <input type="button" class="btn btn-primary" value="Suprimer" onclick=""/>
                        {% endif %}
                    </td>
                </tr>
                <tr id="article-{{ article.id }}" class="collapse">
                    <td colspan="3">
                        <table class="table table-condensed table-responsive">
                            <tbody>
                            {% for articleTr in article.articleTrs %}
                                <tr>
                                    <td>
                                        {{ articleTr.language.picture }} {{ articleTr.title }}
                                    </td>
                                    <td>
                                        {{ articleTr.shortDescription }}
                                    </td>
                                    <td>
                                        {{ articleTr.activated }}
                                        <a href="{{ path('articleTr_new_form', {'id':articleTr.id, 'articleId' : article.id}) }}" class="btn btn-primary">Editer</a>
                                        <input type="button" class="btn btn-primary" value="Supprimer" onclick="setPathDeleteButton('{{ path('articleTr_delete', {'id' : articleTr.id}) }}')"/>
                                    </td>
                                </tr>
                            {% endfor %}
                            {% for missingLanguage in article.missingLanguages %}
                                <tr>
                                    <td>
                                        {{ missingLanguage.name }} {{ missingLanguage.picture }}
                                        &nbsp;<a href="{{ path('articleTr_new_form', {'id': 0, 'articleId': article.id, 'languageId':missingLanguage.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-plus-sign"></span></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block modal %}
    <span id="modalDelete">
        <div class="modal fade" tabindex="-1" role="dialog" id="confirmation">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Suppression</h4>
                    </div>
                    <div class="modal-body">
                        <p>Etes-vous sur de vouloir supprimer cet élément ?</p>
                    </div><!-- /.modal-content -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                        <a id="delete" type="submit" class="btn btn-primary pull-right">Valider</a>
                    </div>
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>
    </span>
    <span id="modalCreate">
    </span>
{% endblock %}
{% block script %}
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    <script>
        function setPathDeleteButton(path) {
            console.log("in");
            $("#delete").attr("href", path);
            $('#confirmation').modal();
        };
        function loadForm(path, modalId) {
            console.log(path);
            console.log(modalId);
            $.ajax({
                url:  path,
                type: 'GET',
                async: false,
                success: function (data, textStatus, jqXHR) {
                    console.log("ifffn");
                    $('#modalCreate').html(data);
                    $('#'+modalId).modal();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log("no good");
                }
            });
        }
    </script>
{% endblock %}
