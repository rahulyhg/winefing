{% extends 'admin/base.html.twig' %}
{% block table %}
    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <th>
                        <button type="button" class="btn btn-default" onclick="loadForm('{{ url('articleCategory_new_form')}}', 'articleCategory')">
                    <span class="glyphicon glyphicon-plus-sign"></span>
                </button>
                Catégorie
            </th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for articleCategory in articleCategories %}
            <tr>
                <td>
                    {% for articleCategoryTr in articleCategory.articleCategoryTrs %}
                        <object style="float: left;" type="image/svg+xml" data="{{ languagePicturePath }}{{ articleCategoryTr.language.picture }}" height="20px">
                        </object>
                        <span style="margin-left: 10px">{{ articleCategoryTr.name }}</span>
                        <br><br>
                    {% endfor %}
                </td>
                <td>
                    {{ articleCategory.description }}
                </td>
                <td>
                    {% if articleCategory.articles is empty %}
                        <input type="button" class="btn btn-primary" value="Supprimer" onclick="setPathDeleteButton('{{ path('articleCategory_delete', {'id' : articleCategory.id}) }}')"/>
                    {% endif %}
                    <input type="button" class="btn btn-primary" value="Editer" id="update" onclick="loadForm('{{ url('articleCategory_new_form', {'id': articleCategory.id})}}', 'articleCategory')"/>
                </td>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block modal %}
    <span id="modalDelete">
        <div class="modal fade" tabindex="-1" role="dialog" id="confirmation">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Suppression</h4>
                    </div>
                    <div class="modal-body">
                        <p>Etes-vous sur de vouloir supprimer cet élément ?</p>
                    </div><!-- /.modal-content -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                        <a id="delete" type="submit" class="btn btn-primary pull-right">Valider</a>
                    </div>
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>
    </span>
    <span id="modalCreate">
    </span>
{% endblock %}
{% block script %}
    <script>
        function setPathDeleteButton(path) {
            console.log("in");
            $("#delete").attr("href", path);
            $('#confirmation').modal();
        }
        function loadForm(path, modalId) {
            console.log(path);
            console.log(modalId);
            $.ajax({
                url:  path,
                type: 'GET',
                async: false,
                success: function (data, textStatus, jqXHR) {
                    console.log("ifffn");
                    $('#modalCreate').html(data);
                    $('#'+modalId).modal();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log("no good");
                }
            });
        }
    </script>
    <script>
        $('#articleCategory').live('submit', function (event) {
            $("#articleCategory :disabled").removeAttr('disabled');
        });
    </script>
{% endblock %}
