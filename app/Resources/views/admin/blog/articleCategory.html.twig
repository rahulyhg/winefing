{% extends 'admin/base.html.twig' %}
{% block table %}
    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <th>
                <button type="button" class="btn btn-default btn-circle btn-plus-admin" onclick="loadForm('{{ url('articleCategory_new_form')}}', 'articleCategory')">
                    <i class="glyphicon glyphicon-plus glyphicon-plus-admin"></i>
                </button>
                Cat√©gorie
            </th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for articleCategory in articleCategories %}
            <tr>
                <td>
                    {% for articleCategoryTr in articleCategory.articleCategoryTrs %}
                        <img src="{{ language_directory ~ articleCategoryTr.language.picture }}" height="20px">
                        <span style="margin-left: 10px">{{ articleCategoryTr.name }}</span>
                        <br><br>
                    {% endfor %}
                </td>
                <td>
                    {{ articleCategory.description }}
                </td>
                <td>
                    {% if articleCategory.articles is empty %}
                        <input type="button" class="btn btn-danger" value="Supprimer" onclick="setPathDeleteButton('{{ path('articleCategory_delete', {'id' : articleCategory.id}) }}')"/>
                    {% endif %}
                    <input type="button" class="btn btn-primary" value="Editer" id="update" onclick="loadForm('{{ url('articleCategory_new_form', {'id': articleCategory.id})}}', 'articleCategory')"/>
                </td>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
