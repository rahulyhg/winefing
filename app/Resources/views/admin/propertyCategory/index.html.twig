{% extends 'admin/base.html.twig' %}
{% block table %}
    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <th>
                <button type="button" class="btn btn-default btn-circle btn-plus-admin" onclick="loadForm('{{ url('propertyCategory_new_form')}}', 'propertyCategory')">
                    <i class="glyphicon glyphicon-plus glyphicon-plus-admin"></i>
                </button>
                Property Category
            </th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for propertyCategory in propertyCategories %}
            <tr>
                <td>
                    {% for propertyCategoryTr in propertyCategory.propertyCategoryTrs %}
                        <object style="float: left;" type="image/svg+xml" data="{{ language_directory }}{{ propertyCategoryTr.language.picture }}" height="20px">
                        </object>
                        <span style="margin-left: 10px">{{ propertyCategoryTr.name }}</span>
                        <br><br>
                    {% endfor %}
                </td>
                <td>
                    <input type="button" class="btn btn-danger" value="{% trans %}label.delete{% endtrans %}" onclick="setPathDeleteButton('{{ path('propertyCategory_delete', {'id' : propertyCategory.id}) }}')"/>
                    <input type="button" class="btn btn-primary" value="{% trans %}label.edit{% endtrans %}" id="update" onclick="loadForm('{{ url('propertyCategory_new_form', {'id': propertyCategory.id})}}', 'propertyCategory')"/>
                </td>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}