<div class="modal fade" tabindex="-1" role="dialog" id="characteristicCategory">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{ form_start(form,  { 'attr': {'required': 'true', 'id' : 'characteristicCategory'} }) }}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Ajouter/modifier une cat√©gorie</h4>
                </div>
                <div class="modal-body">
                    <fieldset class="form-group" id="id" style="display: none">
                        {{ form_widget(form.id,  { 'attr': {'required': 'false'} }) }}
                    </fieldset>
                    <fieldset class="form-group" id="scope" style="display: none">
                        {{ form_widget(form.scope) }}
                    </fieldset>
                    <fieldset class="form-group" id="description">
                        <label>Admin description</label>
                        {{ form_widget(form.description,  { 'attr': {'class': 'form-control'} }) }}
                    </fieldset>
                    <label>Name</label>
                    {% for characteristicCategoryTr in form.characteristicCategoryTrs %}
                        <fieldset class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    {{ form_widget(characteristicCategoryTr.language, {'attr' : {'disabled': 'false'} }) }}
                                </div>
                                <div class="col-md-10">
                                    {{ form_widget(characteristicCategoryTr.name,  { 'attr': {'class': 'form-control', 'style': 'width: 50%;'} }) }}
                                    {{ form_widget(characteristicCategoryTr.id, {'attr': {'style': 'display: none'}}) }}
                                </div>
                            </div>
                        </fieldset>
                    {% endfor %}
                    <fieldset class="form-group" id="picture">
                        <label>Icon (.svg)</label>
                        {{ form_widget(form.picture,  { 'attr': {'class': 'form-control'} }) }}
                    </fieldset>
                    <input checked type='checkbox' name='characteristic_category[activated]' value='0' hidden/>
                    <fieldset class="form-group">
                        {{ form_label(form.activated) }}
                        {{ form_widget(form.activated,  { 'attr': {'class': 'form-control'} }) }}
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary pull-right">Valider</button>
                </div>
            {{ form_end(form) }}
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>