{% extends 'admin/base.html.twig' %}
{% block table %}
    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <th>
                <button type="button" class="btn btn-default" onclick="loadForm('{{ url('characteristicCategory_new_form', {'scopeId' : characteristicCategories[0].scope.id }) }}', 'characteristicCategory')">
                    <span class="glyphicon glyphicon-plus-sign"></span>
                </button>
                Catégorie
            </th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for characteristicCategory in characteristicCategories %}
            <tr>
                <td data-toggle="collapse" data-target="#characteristics-{{ characteristicCategory.id }}" class="accordion-toggle" style="cursor:pointer">
                    {% for characteristicCategoryTr in characteristicCategory.characteristicCategoryTrs %}
                        {{ characteristicCategoryTr.name }}
                        &nbsp;
                    {% endfor %}
                </td>
                <td data-toggle="collapse" data-target="#characteristics-{{ characteristicCategory.id }}" class="accordion-toggle" style="cursor:pointer">
                    {{ characteristicCategory.description }}
                </td>
                <td>
                    {% if characteristicCategory.characteristics is empty %}
                        <input type="button" class="btn btn-primary" value="Supprimer" onclick="setPathDeleteButton('{{ path('characteristicCategory_delete', {'id' : characteristicCategory.id}) }}')"/>
                    {% else %}
                        {% if characteristicCategory.activated == 1 %}
                            {% set checked = 'checked' %}
                        {% else %}
                            {% set checked = '' %}
                        {% endif %}
                        <input {{ checked }} onchange="activate('{{ path('characteristicCategory_activated') }}', 'characteristicCategoryActivatedToggle', '{{ characteristicCategory.id }}')" id="characteristicCategoryActivatedToggle-{{ characteristicCategory.id }}" type="checkbox" value="{{ characteristicCategory.id }}" data-toggle="toggle" data-off="Not activated" data-on="Activated" data-onstyle="success">
                    {% endif %}
                    <input type="button" class="btn btn-primary" value="Editer" id="update" onclick="loadForm('{{ path('characteristicCategory_new_form', {'scopeId' : characteristicCategories[0].scope.id, 'id' : characteristicCategory.id, }) }}', 'characteristicCategory')"/>
                </td>
            </tr>
            <tr id="characteristics-{{ characteristicCategory.id }}" class="collapse">
                <td colspan="3">
                    <table class="table table-condensed table-responsive">
                        <tbody>
                            {% for characteristic in characteristicCategory.characteristics %}
                                <tr>
                                    <td>
                                    {% for characteristicTr in characteristic.characteristicTrs %}
                                        {{ characteristicTr.name }}
                                        &nbsp;
                                    {% endfor %}
                                    </td>
                                    <td>
                                        {{ characteristic.format.name }}
                                    </td>
                                    <td>
                                        {{ characteristic.description }}
                                    </td>
                                    <td>
                                        <input type="button"  class="btn btn-primary" value="Editer" id="update" onclick="loadForm('{{ path('characteristic_new_form', {'characteristicCategoryId' : characteristicCategory.id, 'id' : characteristic.id}) }}', 'characteristic')"/>
                                        <input type="button" class="btn btn-primary" value="Suprimer" onclick="setPathDeleteButton('{{ path('characteristic_delete', {'id' : characteristic.id}) }}')"/>
                                    </td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <td colspan="4">
                                    <button type="button" class="btn btn-default" onclick="loadForm('{{ path('characteristic_new_form', {'characteristicCategoryId' : characteristicCategory.id}) }}', 'characteristic')">
                                        <span class="glyphicon glyphicon-plus-sign"></span>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block modal %}
    <span id="modalDelete">
        <div class="modal fade" tabindex="-1" role="dialog" id="confirmation">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Suppression</h4>
                    </div>
                    <div class="modal-body">
                        <p>Etes-vous sur de vouloir supprimer cet élément ?</p>
                    </div><!-- /.modal-content -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                        <a id="delete" type="submit" class="btn btn-primary pull-right">Valider</a>
                    </div>
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>
    </span>
    <span id="modalCreate">
    </span>
{% endblock %}
{% block script %}
    <script>
        function setPathDeleteButton(path) {
            $("#delete").attr("href", path);
            $('#confirmation').modal();
        }
        function loadForm(path, modalId) {
            $.ajax({
                url:  path,
                type: 'GET',
                async: false,
                success: function (data, textStatus, jqXHR) {
                    $('#modalCreate').html(data);
                    $('#'+modalId).modal();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log("no good");
                }
            });
        }
        function activate(path, checkBox, id){
            var checkBoxId = checkBox+'-'+id;
            if(document.getElementById(checkBoxId).checked){
                activatedValue = 1;
            } else {
                activatedValue = 0;
            }
            $.ajax({
                url:  path,
                type: 'PUT',
                data: {activated:activatedValue, id:id},
                async: false,
                success: function (data, textStatus, jqXHR) {
                    console.log(data);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log("no good");
                }
            });
        }
        $('input[type="checkbox"]').live('change', function(){
            this.value = (Number(this.checked));
        });
    </script>
    <script>
        $('#characteristicCategory').live('submit', function () {
            $("#characteristicCategory :disabled").removeAttr('disabled');
        });
        $('#characteristic').live('submit', function (event) {
            $("#characteristic :disabled").removeAttr('disabled');
        });
    </script>
{% endblock %}
