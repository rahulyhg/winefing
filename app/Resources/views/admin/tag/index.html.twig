{% extends 'admin/base.html.twig' %}
{% block table %}
    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <th>
                <button type="button" class="btn btn-default btn-circle btn-plus-admin" onclick="loadForm('{{ url('tag_new_form')}}', 'tag')">
                    <i class="glyphicon glyphicon-plus glyphicon-plus-admin"></i>
                </button>
                Tags
            </th>
            <th>Picture</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>
                    {% for tagTr in tag.tagTrs %}
                        <object style="float: left;" type="image/svg+xml" data="{{ language_directory }}{{ tagTr.language.picture }}" height="20px">
                        </object>
                        <span style="margin-left: 10px">{{ tagTr.name }}</span>
                        <br><br>
                    {% endfor %}
                </td>
                <td>
                    <img src="{{ tag_directory ~ tag.picture }}" width="200px" class="img-responsive">
                </td>
                <td>
                    <input type="button" class="btn btn-danger" value="Supprimer" onclick="setPathDeleteButton('{{ path('tag_delete', {'id' : tag.id}) }}')"/>
                    <input type="button" class="btn btn-primary" value="Editer" id="update" onclick="loadForm('{{ url('tag_new_form', {'id': tag.id})}}', 'tag')"/>
                </td>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}