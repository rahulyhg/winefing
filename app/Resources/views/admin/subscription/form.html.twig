<div class="modal fade" tabindex="-1" role="dialog" id="subscription">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{ form_start(form,  { 'attr': {'required': 'true', 'id' : 'subscription'} }) }}
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Ajouter/modifier un abonnement</h4>
            </div>
            <div class="modal-body">
                <fieldset class="form-group" id="id" style="display: none">
                    {{ form_widget(form.id,  { 'attr': {'required': 'false'} }) }}
                </fieldset>
                <div class="row">
                    <div class="col-md-6">
                        <fieldset class="form-group">
                            {{ form_label(form.format) }}
                            {{ form_widget(form.format, { 'attr': {'class': 'form-control'}}) }}
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <fieldset class="form-group">
                            {{ form_label(form.userGroup) }}
                            {{ form_widget(form.userGroup, { 'attr': {'class': 'form-control'}}) }}
                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <fieldset class="form-group">
                            {{ form_label(form.code) }}
                            {{ form_widget(form.code, { 'attr': {'class': 'form-control'}}) }}
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <input checked hidden type="checkbox" name="subscription[activated]" value="0"/>
                        <fieldset class="form-group">
                            {{ form_label(form.activated) }}
                            {{ form_widget(form.activated, { 'attr': {'class': 'form-control'}}) }}
                        </fieldset>
                    </div>
                </div>
                {% for subscriptionTr in form.subscriptionTrs %}
                    {{ form_widget(subscriptionTr.id, {'attr': {'style': 'display: none'}}) }}
                    <fieldset class="form-group">
                        {{ form_widget(subscriptionTr.language, {'attr' : {'disabled': 'false'} }) }}
                    </fieldset>
                    <fieldset class="form-group">
                        {{ form_label(subscriptionTr.name) }}
                        {{ form_widget(subscriptionTr.name,  { 'attr': {'class': 'form-control', 'style': 'width: 50%;'} }) }}
                    </fieldset>
                    </fieldset>
                    <fieldset class="form-group">
                        {{ form_label(subscriptionTr.description) }}
                        {{ form_widget(subscriptionTr.description, { 'attr': {'class': 'form-control'}}) }}
                    </fieldset>
                    <hr>
                {% endfor %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-primary pull-right">Valider</button>
            </div>
            {{ form_end(form) }}
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>