{% extends 'admin/base.html.twig' %}
{% block table %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>
                <button type="button" class="btn btn-default btn-circle btn-plus-admin" onclick="loadForm('{{ url('format_new_form')}}', 'format')">
                    <i class="glyphicon glyphicon-plus glyphicon-plus-admin"></i>
                </button> Format
            </th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for format in formats %}
            <tr>
                <td>{{ format.name }}</td>
                <td>{{ format.description }}</td>
                <td>
                    <input type="button"  class="btn btn-primary" value="Editer" id="update" onclick="loadForm('{{ path('format_new_form', {'id' : format.id}) }}', 'format')"/>
                    <input type="button" class="btn btn-danger" value="Supprimer" onclick="setPathDeleteButton('{{ path('format_delete', {'id' : format.id}) }}')"/>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}