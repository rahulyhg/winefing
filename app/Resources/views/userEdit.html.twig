                    {#});#}
                {#}#}
            {#} else {#}
                {#$.toast({#}
                    {#heading: toastHeadingError,#}
                    {#text: '{{ 'error.password_format' | trans({}) }}',#}
                    {#showHideTransition: 'fade',#}
                    {#icon: 'error',#}
                    {#position: 'top-right'#}
                {#});#}
            {#}#}
        }
        var nav = '{{ nav }}';
        function submitUser() {
            if($('#error-phone-number').is(":visible")) {
                $.toast({
                    heading: toastHeadingError,
                    text: '{{ 'label.invalid_number' | trans({}) }}',
                    showHideTransition: 'fade',
